#include <iostream>
#include <vector>
using namespace std;

int main() {
    int n;

    cout << "Enter number of elements: ";
    cin >> n;

    vector<int> a(n);

    cout << "Enter elements:\n";
    for(int i = 0; i < n; i++) {
        cin >> a[i];
    }

    // Bubble Sort
    for(int i = 0; i < n - 1; i++) {
        bool swapped = false;

        for(int j = 0; j < n - i - 1; j++) {
            if(a[j] > a[j + 1]) {
                swap(a[j], a[j + 1]);
                swapped = true;
            }
        }

        // If no swapping happens, array is already sorted
        if(!swapped)
            break;
    }

    cout << "Sorted array:\n";
    for(int i = 0; i < n; i++) {
        cout << a[i] << " ";
    }

    return 0;
}  
